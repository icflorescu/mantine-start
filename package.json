    "@mantine/hooks": "^8.1.0",
    "@mantine/modals": "^8.1.0",
    "@mantine/nprogress": "^8.1.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-router": "1.121.2",
    "@tanstack/react-start": "1.121.9",
    "@trpc/client": "^11.4.1",
    "@trpc/server": "^11.4.1",
    "@trpc/tanstack-react-query": "^11.4.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.2",
    "mantine-form-zod-resolver": "^1.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "superjson": "^2.2.2",
    "valtio": "^2.1.5",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.44.2",
    "@faker-js/faker": "^9.8.0",
    "@hello-pangea/dnd": "^18.0.1",
    "@tanstack/eslint-config": "^0.2.0",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@tanstack/react-router-devtools": "1.121.8",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "eslint-config-mantine": "^4.0.3",
    "eslint-plugin-import-x": "^4.15.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "postcss": "^8.5.5",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3"
  }
}
