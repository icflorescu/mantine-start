{
  "name": "mantine-start",
  "version": "0.0.1",
  "description": "Mantine + TanStack Start template",
  "author": {
    "name": "Ionut-Cristian Florescu",
    "url": "https://github.com/icflorescu",
    "email": "ionut.florescu@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/icflorescu/mantine-start"
  },
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "dotenvx run -- vite dev",
    "build": "dotenvx run -- vite build",
    "preview": "dotenvx run -- node .output/server/index.mjs",
    "start": "node .output/server/index.mjs",
    "db:reset": "rm -rf db.sqlite drizzle && pnpm db:update",
    "db:update": "drizzle-kit generate && drizzle-kit migrate",
    "db:seed": "dotenvx run -- tsx scripts/seed.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "@mantine/core": "^8.1.0",
    "@mantine/dates": "^8.1.0",
